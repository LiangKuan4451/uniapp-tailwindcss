{
  "easycom": {
    "autoscan": true,
    "custom": {
      // uni-ui 规则如下配置
      "^uni-(.*)": "@dcloudio/uni-ui/lib/uni-$1/uni-$1.vue"
    }
  },

  "lazyCodeLoading": "requiredComponents",
  "pages": [
    //pages数组中第一项表示应用启动页，参考：https://uniapp.dcloud.io/collocation/pages
    {
      "path": "pages/index/index",
      "style": {
        "navigationBarTitleText": "潘鹰宇-2205306010411"
      }
    },
    {
      "path": "pages/count/count",
      "style": {
        "navigationBarTitleText": "统计"
      }
    },
    {
      "path": "pages/userInfo/userInfo",
      "style": {
        "navigationBarTitleText": "我的"
      }
    }
  ],
  "globalStyle": {
    "navigationBarTextStyle": "white",
    "navigationBarTitleText": "潘鹰宇-2205306010411",
    "navigationBarBackgroundColor": "#42b883",
    "backgroundColor": "#F8F8F8"
  },
  "tabBar": {
    "color": "#7A7E83",
    "selectedColor": "#3cc51f",
    "borderStyle": "black",
    "backgroundColor": "#ffffff",
    "list": [
      {
        "pagePath": "pages/index/index",
        "text": "明细",
        "iconPath": "static/images/tabBar/home.png",
        "selectedIconPath": "static/images/tabBar/home-active.png"
      },
      {
        "pagePath": "pages/count/count",
        "text": "统计",
        "iconPath": "static/images/tabBar/genre.png",
        "selectedIconPath": "static/images/tabBar/genre-active.png"
      },
      {
        "pagePath": "pages/userInfo/userInfo",
        "text": "我的",
        "iconPath": "static/images/tabBar/mine.png",
        "selectedIconPath": "static/images/tabBar/mine-active.png"
      }
    ]
  }
}
